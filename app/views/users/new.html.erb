<h1> Sign up</h1>
<br>
<%= form_for @user do |f| %>
  <%= f.label :username, "User Name" %>
  <%= f.text_field :username, autofocus: true %>
  <br>
  <%= f.label :email, "Email" %>
  <%= f.email_field :email %>
  <br>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up" %>
<% end %>
