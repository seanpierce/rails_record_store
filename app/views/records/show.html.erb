<div id="record-detail-container">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @record.title %></h3>
      <h5><%= @record.artist %></h5>
      <span>$<%= @record.cost %></span>
      <% if @record.description %>
        <p><%= @record.description %></p>
      <% else %>
        <p><em>No description available</em></p>
      <% end %>
    </div>
    <div class="col-md-6 detail-img">
      <%= image_tag(@record.image) %>
    </div>
  </div>
</div>
